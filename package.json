{
  "name": "router402",
  "version": "0.1.0",
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@types/bun": "^1.3.8",
    "@types/jest": "29.0.0",
    "@types/pg": "^8.16.0",
    "husky": "^9.1.7",
    "turbo": "^2.8.0",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "format": "biome check --write --formatter-enabled=true --assist-enabled=true ",
    "clean": "turbo clean && rm -rf node_modules && rm -rf bun.lock",
    "prepare": "husky",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build && changeset publish",
    "build:server": "turbo build --filter=@router402/sdk && turbo build --filter=@router402/types && turbo build --filter=@router402/utils && turbo build --filter=@router402/server"
  },
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.3.8",
  "workspaces": [
    "apps/server",
    "apps/web",
    "packages/*"
  ]
}

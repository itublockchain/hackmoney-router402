{
  "$schema": "https://turborepo.dev/schema.json",
  "tasks": {
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "typecheck": {},
    "lint": {},
    "test": {
      "dependsOn": ["^build"]
    },
    "format": {},
    "clean": {
      "cache": false
    }
  }
}
